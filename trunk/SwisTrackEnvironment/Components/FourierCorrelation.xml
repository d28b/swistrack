<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Fourier Correlation</friendlyname>
	<description>Detects (small) patterns by correlation in the Fourier domain. Includes a flexible bandpass filter to optimise detection.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/ConvertToGray</url>
	<displayimage>Output</displayimage>

	<configuration>
		
		<parameter type="inputfile">
			<name>Pattern1</name>
			<label>pattern1</label>
			<filetype>image</filetype>
			<reloadable>false</reloadable>
		</parameter>
		
		<parameter type="inputfile">
			<name>Pattern2</name>
			<label>pattern2</label>
			<filetype>image</filetype>
			<reloadable>false</reloadable>
		</parameter>
		
		<parameter type="double">
			<name>CenterFrequency</name>
			<label>Center Frequency</label>
			<min>0</min>
			<max>1</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
			<default>0.0</default>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Width</name>
			<label>Width</label>
			<min>0.0</min>
			<max>0.5</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
			<default>0.0</default>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Sigma</name>
			<label>Sigma</label>
			<min>0.01</min>
			<max>3</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
			<default>0.3</default>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		

		<parameter type="double">
			<name>Gain</name>
			<label>Gain</label>
			<min>0.001</min>
			<max>2</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
			<default>1.0</default>
			<sliderstep>0.001</sliderstep>
			<reloadable>true</reloadable>
		</parameter>

		<parameter type="checkbox">
			<name>InvertFilter</name>
			<label>Invert Filter (Notch)</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>

		<parameter type="checkbox">
			<name>GenerateOutput</name>
			<label>Generate Display Output (slow)</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		
		<parameter type="double">
			<name>shift</name>
			<label>shift</label>
			<min>0</min>
			<max>500</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
			<default>0.0</default>
			<sliderstep>1</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
