<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Input from Proselica GigE Camera</friendlyname>
	<description>Grabs an image from a gigabit ethernet (GigE) camera using the Prosilica's PvAPI driver.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/InputCameraProselicaGigE</url>
	<displayimage>Output</displayimage>

	<configuration>		
		<parameter type="dropdownlist">
			<name>Color</name>
			<label>Color Mode</label>
			<items>
				<item key="true">Color </item>
				<item key="false">Mono (8 bit)</item>
			</items>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>ExposureMode</name>
			<label>Exposure mode</label>
			<items>
				<item key="0">Manual</item>
				<item key="1">Auto</item>
				<item key="2">Auto Once</item>
				<item key="3">External</item>
			</items>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>ExposureValue</name>
			<label>Exposure value</label>
			<min>10000</min>
			<max>60000000</max>
			<default>60000</default>
			<sliderstep>1000</sliderstep>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>AnalogGain</name>
			<label>Analog gain</label>
			<min>0</min>
			<max>21</max>
			<default>0</default>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<title>Region of Interest (For stability, chage should be done from *.xml or *.swistrack file)</title>
		<parameter type="pointInteger">
			<name>AOIOffset</name>
			<label>Offset</label>
			<labelx>X</labelx>
			<labely>Y</labely>
			<unit>pixels</unit>
			<min>
				<x>0</x>
				<y>0</y>
			</min>
			<max>
				<x>4872</x>
				<y>3248</y>
			</max>
			<default>
				<x>0</x>
				<y>0</y>
			</default>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="pointInteger">
			<name>AOISize</name>
			<label>Size</label>
			<labelx>W</labelx>
			<labely>H</labely>
			<unit>pixels</unit>
			<min>
				<x>0</x>
				<y>0</y>
			</min>
			<max>
				<x>4872</x>
				<y>3248</y>
			</max>
			<default>
				<x>4872</x>
				<y>3248</y>
			</default>
			<reloadable>false</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>

 	  	 
