<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>UNFINISHED Optical Flow</friendlyname>
	<description>Tracking with cvCalcOpticalFlowPyrLK, following the OpenCV O'Reilly book
	</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/OpticalFlowPyrLKTracking</url>
	<displayimage>Output</displayimage>
	<configuration>
		<parameter type="integer">
		    <name>MaxNumber</name>
			<label>Number of Tracks</label>
			<unit>Individuals</unit>
			<default>10</default>
		</parameter>
		<parameter type="double">
			<name>MaxDistance</name>
			<label>Maximum Distance</label>
			<min>0</min>
			<max>1000</max>
			<default>20</default>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>MinNewTrackDistance</name>
			<label>Minimum Distance for track creation</label>
			<min>0</min>
			<max>1000</max>
			<default>100</default>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>

		<parameter type="double">
			<name>FrameKillThreshold</name>
			<label>Frames to wait before stopping the track.</label>
			<min>3</min>
			<max>1000</max>
			<default>100</default>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>

		<parameter type="integer">
			<name>TrackDistanceKillThreshold</name>
			<label>Mininum distance between tracks before dropping tracks.</label>
			<min>3</min>
			<max>1000</max>
			<default>100</default>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
