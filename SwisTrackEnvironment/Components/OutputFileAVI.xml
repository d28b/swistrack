<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Write AVI File</friendlyname>
	<description>Writes an AVI file.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/OutputFileAVI</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="outputfile">
			<name>FileTitle</name>
			<label>AVI file</label>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="string">
			<name>Codec</name>
			<label>Codec code</label>
			<default>Def.</default>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="integer">
			<name>FrameRate</name>
			<label>Frame rate</label>
			<default>15</default>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="dropdownlist">
			<name>InputChannel</name>
			<label>Input image</label>
			<items>
				<item key="color">Color</item>
				<item key="grayscale">Grayscale</item>
				<item key="binary">Binary</item>
			</items>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
