<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Input from USB Camera</friendlyname>
	<description>Grabs an image from a USB camera (OpenCV).</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/InputCameraUSB</url>
	<displayimage>Output</displayimage>

	<configuration>
		<title>Source</title>
		<label>Camera 0 is the first camera, 1 is the second camera, and so on. Setting this value to -1 means "any camera".</label>
		<parameter type="integer">
			<name>CameraNumber</name>
			<label>Camera number</label>
			<unit></unit>
			<min>-1</min>
			<max>50</max>
			<default>0</default>
		</parameter>

		<title>Settings</title>
		<label>Note that cameras may not support all size and framerate combinations. If the camera fails to open, modify these values.</label>
		<parameter type="integer">
			<name>FrameWidth</name>
			<label>Width</label>
			<unit>Pixels</unit>
			<min>10</min>
			<max>10000</max>
			<default>1920</default>
		</parameter>
		<parameter type="integer">
			<name>FrameHeight</name>
			<label>Height</label>
			<unit>Pixels</unit>
			<min>10</min>
			<max>10000</max>
			<default>1080</default>
		</parameter>
		<parameter type="integer">
			<name>FramesPerSecond</name>
			<label>FPS</label>
			<unit></unit>
			<min>1</min>
			<max>100</max>
			<default>10</default>
		</parameter>
	</configuration>
</swistrackcomponent>
