<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Crop Image</friendlyname>
	<description>Crops a fixed area of the image (region of interest).</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/CropImage</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>Left</name>
			<label>Left</label>
			<min>0</min>
			<max>10000</max>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>

		<parameter type="integer">
			<name>Top</name>
			<label>Top</label>
			<min>0</min>
			<max>10000</max>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>

		<parameter type="integer">
			<name>Width</name>
			<label>Width</label>
			<min>0</min>
			<max>10000</max>
			<default>10000</default>
			<onchange>reload</onchange>
		</parameter>

		<parameter type="integer">
			<name>Height</name>
			<label>Height</label>
			<min>0</min>
			<max>10000</max>
			<default>10000</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
