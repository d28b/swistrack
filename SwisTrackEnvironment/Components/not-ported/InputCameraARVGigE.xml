<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Input from GigE Camera</friendlyname>
	<description>Grabs an image from a gigabit ethernet (GigE) camera using the ARAVIS driver</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/InputCameraGigE</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="gigecameralist">
			<name>CameraFullName</name>
			<label>Camera</label>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="dropdownlist">
			<name>Color</name>
			<label>Mode</label>
			<items>
				<item key="true">Color (YUV422)</item>
				<item key="false">Grayscale (8 bit)</item>
			</items>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="dropdownlist">
			<name>TriggerMode</name>
			<label>Trigger mode</label>
			<items>
				<item key="0">Timer</item>
				<item key="1">External trigger (line 1)</item>
				<item key="2">External trigger (line 2)</item>
				<item key="3">External trigger (line 3)</item>
				<item key="4">External trigger (line 4)</item>
				<item key="5">Software trigger</item>
			</items>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="integer">
			<name>TriggerTimerFPS</name>
			<label>Timer</label>
			<unit>FPS</unit>
			<min>1</min>
			<max>50</max>
			<default>10</default>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="integer">
			<name>ExposureTime</name>
			<label>Exposure time</label>
			<min>1</min>
			<max>1000</max>
			<default>400</default>
			<slider>true</slider>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>AnalogGain</name>
			<label>Analog gain</label>
			<min>360</min>
			<max>1023</max>
			<default>500</default>
			<slider>true</slider>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>InputBufferSize</name>
			<label>Input buffer size</label>
			<min>1</min>
			<max>16</max>
			<unit>images</unit>
			<default>8</default>
			<slider>false</slider>
			<onchange>restart</onchange>
		</parameter>

		<title>Area of Interest</title>
		<parameter type="pointInteger">
			<name>AOIOffset</name>
			<label>Offset</label>
			<labelx>X</labelx>
			<labely>Y</labely>
			<unit>pixels</unit>
			<min>
				<x>0</x>
				<y>0</y>
			</min>
			<max>
				<x>1024</x>
				<y>1024</y>
			</max>
			<default>
				<x>256</x>
				<y>256</y>
			</default>
			<sliderstep>
				<x>24</x>
				<y>1</y>
			</sliderstep>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="pointInteger">
			<name>AOISize</name>
			<label>Size</label>
			<labelx>W</labelx>
			<labely>H</labely>
			<unit>pixels</unit>
			<min>
				<x>0</x>
				<y>0</y>
			</min>
			<max>
				<x>1280</x>
				<y>1024</y>
			</max>
			<default>
				<x>512</x>
				<y>500</y>
			</default>
			<onchange>restart</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
