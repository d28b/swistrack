<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Output each frame to seperate image</friendlyname>
	<description>Saves each frame as a seperate image in the given directory. Increments filename by storing frame number in it.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/OutputFramesImages</url>
	<displayimage>Output</displayimage>
	<configuration>
		<parameter type="outputfile">
			<name>FilePrefix</name>
			<label>directroy and filename prefix</label>
			<reloadable>false</reloadable>
		</parameter>
		<label>frame number and extension will be automatically appended.</label>
		<parameter type="dropdownlist">
			<name>FileType</name>
			<label>File Type</label>
			<items>
				<item key="0">png</item>
				<item key="1">bmp</item>
				<item key="2">jpeg</item>
			</items>
			<default>0</default>
			<reloadable>false</reloadable>
		</parameter>
		<label>Note: ".bmp" appears to be fastest, but produces huge files.</label>
		<parameter type="dropdownlist">
			<name>InputImage</name>
			<label>Input Image</label>
			<items>
				<item key="0">Gray</item>
				<item key="1">Color</item>
				<item key="2">Binary</item>
			</items>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
