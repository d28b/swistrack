<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Track Smoothing</friendlyname>
	<description>Smooths tracks by averaging points in a sliding window. </description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/TrackSmoothing</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
		    <name>WindowSize</name>
			<label>Smooth over</label>
			<unit>points</unit>
			<default>3</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
