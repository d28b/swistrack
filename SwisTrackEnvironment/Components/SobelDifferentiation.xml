<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Sobel Differentiation</friendlyname>
	<description>Calculates first, second, third or mixed image derivatives using extended Sobel operator</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/SobelDifferentiation</url>
	<displayimage>Output</displayimage>

	<configuration>
		<line />
		<title>Parameters</title>
		<parameter type="integer">
			<name>OrderX</name>
			<label>Order X</label>
			<min>0</min>
			<max>3</max>
			<default>1</default>
			<unit>order</unit>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>OrderY</name>
			<label>Order Y</label>
			<min>0</min>
			<default>1</default>
			<max>3</max>
			<unit>order</unit>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="dropdownlist">
			<name>KernelSize</name>
			<label>Kernel</label>
			<items>
				<item key="1">1x1</item>
				<item key="3">3x3</item>
				<item key="5">5x5</item>
				<item key="7">7x7</item>
			</items>
			<default>3</default>
			<onchange>reload</onchange>
	  	</parameter>
	</configuration>
</swistrackcomponent>
