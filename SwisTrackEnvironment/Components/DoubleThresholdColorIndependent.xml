<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Double Threshold (color)</friendlyname>
	<description>Thresholds a color image using a lower and an upper threshold value for each channel. The result is a binary image.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/DoubleThresholdColorIndependent</url>
	<displayimage>Output</displayimage>

	<configuration>
		<title>Red</title>
		<parameter type="integer">
			<name>RedLowThreshold</name>
			<label>Low threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>RedHighThreshold</name>
			<label>High threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>255</default>
			<onchange>reload</onchange>
		</parameter>

		<title>Green</title>
		<parameter type="integer">
			<name>GreenLowThreshold</name>
			<label>Low threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>GreenHighThreshold</name>
			<label>High threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>255</default>
			<onchange>reload</onchange>
		</parameter>

		<title>Blue</title>
		<parameter type="integer">
			<name>BlueLowThreshold</name>
			<label>Low threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>BlueHighThreshold</name>
			<label>High threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<default>255</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
