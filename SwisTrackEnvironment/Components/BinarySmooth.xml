<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Binary Smooth</friendlyname>
	<description>Smoothing component for binary images.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/BinarySmooth</url>
	<displayimage>Output</displayimage>

	<configuration>
		<line />
		<title>Parameters</title>
		<parameter type="dropdownlist">
	    		<name>smoothtype</name>
	    		<label>Type of smoothing</label>
	    		<items>
	    		  <item key="1">CV_BLUR_NO_SCALE</item>
	    		  <item key="2">CV_BLUR</item>
	    		  <item key="3">CV_GAUSSIAN</item>
			  <item key="4">CV_MEDIAN</item>	    	
			  <item key="5">CV_BILATERAL</item>			
			</items>
	    		<default>1</default>
	    		<reloadable>true</reloadable>
	  	</parameter>
		<parameter type="dropdownlist">
	    		<name>param</name>
	    		<label>Parameter for smoothing</label>
	    		<items>
	    		  <item key="1">1</item>
	    		  <item key="3">3</item>
	    		  <item key="5">5</item>
			  <item key="7">7</item>	    	
			  <item key="9">9</item>						
			</items>
	    		<default>1</default>
	    		<reloadable>true</reloadable>
	  	</parameter>
	</configuration>
</swistrackcomponent>
