<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Background Subtraction (color)</friendlyname>
	<description>Subtracts a background image.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/BackgroundSubtractionColor</url>
	<displayimage>Output</displayimage>
	<configuration>
		<parameter type="inputfile">
			<name>BackgroundImage</name>
			<label>Background image</label>
			<filetype>image</filetype>
			<onchange>restart</onchange>
		</parameter>
		<parameter type="checkbox">
			<name>CorrectMean</name>
			<label>Correct Mean</label>
			<default>1</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
