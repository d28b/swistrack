<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Conversion to Grayscale</friendlyname>
	<description>Converts an input image to a grayscale image for further processing. (If the input image is a grayscale image already, the same image is used without making a copy.)</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/ConvertToGray</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="dropdownlist">
			<name>Channel</name>
			<label>Channel (if color image)</label>
			<items>
				<item key="-1">Mean of all channels</item>
				<item key="0">Red</item>
				<item key="1">Green</item>
				<item key="2">Blue</item>
			</items>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
