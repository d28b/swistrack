<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Blob detection</friendlyname>
	<description>Select the blobs on the binary image based on given criteria.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/BlobDetectionMinMax</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>MaxNumber</name>
			<label>Max. blobs</label>
			<min>1</min>
			<max>50</max>
			<default>10</default>
			<unit>blobs</unit>
			<slider>true</slider>
		</parameter>
		<parameter type="checkbox">
			<name>AreaBool</name>
			<label>Area selection</label>
			<default>0</default>
		</parameter>
		<parameter type="integer">
			<name>MinArea</name>
			<label>Min. blob size</label>
			<min>0</min>
			<default>10</default>
			<unit>pixels</unit>
		</parameter>
		<parameter type="integer">
			<name>MaxArea</name>
			<label>Max. blob size</label>
			<min>0</min>
			<default>100</default>
			<unit>pixels</unit>
		</parameter>
		<parameter type="color">
			<name>Color 1</name>
			<label>Color 1</label>
			<default>#ff0000</default>
		</parameter>
		<parameter type="color">
			<name>Color 2</name>
			<label>Color 2</label>
			<default>#0000ff</default>
		</parameter>
	</configuration>
</swistrackcomponent>
