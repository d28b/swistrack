<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Circular Hough Transform</friendlyname>
	<description>Detects circles in an image using the circular Hough transform. Circle centers are provided as particles</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/BlobDetectionCircularHough</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>AccumulatorResolution</name>
			<label>Accumulator Resolution</label>
			<min>1</min>
			<max>2</max>
			<default>1</default>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>MinDist</name>
			<label>Min. distance between circles</label>
			<min>0</min>
			<default>50</default>
			<max>500</max>
			<unit>pixels</unit>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>

		<line />
		<title>Parameters</title>
		<parameter type="integer">
			<name>EdgeDetectionThreshold</name>
			<label>Canny Edge Detection Threshold</label>
			<min>0</min>
			<default>200</default>
			<max>500</max>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>CenterDetectionThreshold</name>
			<label>Center Detection Threshold</label>
			<min>0</min>
			<default>10</default>
			<max>500</max>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="checkbox">
			<name>SelectionBySize</name>
			<label>Selection by size</label>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>MinRadius</name>
			<label>Min. circle radius</label>
			<min>0</min>
			<default>10</default>
			<max>500</max>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<unit>pixels</unit>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>MaxRadius</name>
			<label>Max. circle radius</label>
			<min>0</min>
			<default>50</default>
			<max>1000</max>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<unit>pixels</unit>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="checkbox">
			<name>LimitNumberOfCircles</name>
			<label>Limit number of circles</label>
			<default>0</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>MaxNumberOfCircles</name>
			<label>Max. number of circles</label>
			<default>20</default>
			<max>100</max>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<unit>circles</unit>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
