<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Timer Trigger</friendlyname>
	<description>Invokes steps in regular intervals.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/TriggerTimer</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="double">
			<name>Interval</name>
			<label>Interval</label>
			<unit>s</unit>
			<default>0.1</default>
			<min>0.01</min>
			<max>1</max>
			<slider>true</slider>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
