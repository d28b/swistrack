<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Cam Shift Tracking</friendlyname>
	<description>Uses CvCamShiftTracker from cvaux
	</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/CamShiftTracking</url>
	<displayimage>Output</displayimage>
	<configuration>
	  <parameter type="dropdownlist">
	    <name>HistogramDimensions</name>
	    <label>HistogramDimensions</label>
	    <items>
	      <item key="1">1</item>
	      <item key="2">2</item>
	      <item key="3">3</item>
	    </items>
	    <unit></unit>
	    <default>1</default>
	    <reloadable>false</reloadable>
	  </parameter>
	  <parameter type="integer">
	    <name>VMin</name>
	    <label>VMin</label>
	    <unit></unit>
	    <default>60</default>
	    <reloadable>false</reloadable>
	  </parameter>
	  <parameter type="integer">
	    <name>SMin</name>
	    <label>SMin</label>
	    <unit></unit>
	    <default>50</default>
	    <reloadable>false</reloadable>
	  </parameter>
	  <parameter type="integer">
	    <name>InitialWindowSize</name>
	    <label>Initial Window Size when making new tracks</label>
	    <unit></unit>
	    <default>100</default>
	    <reloadable>true</reloadable>
	  </parameter>
	  <parameter type="double">
	    <name>MinNewTrackDistance</name>
	    <label>Minimum Distance for track creation</label>
	    <min>0</min>
	    <max>1000</max>
	    <default>100</default>
	    <slider>true</slider>
	    <reloadable>true</reloadable>
	  </parameter>
	  
	  <parameter type="double">
	    <name>FrameKillThreshold</name>
	    <label>Frames to wait before stopping the track.</label>
	    <min>3</min>
	    <max>1000</max>
	    <default>100</default>
	    <slider>true</slider>
	    <reloadable>true</reloadable>
	  </parameter>
	  <parameter type="integer">
	    <name>TrackDistanceKillThreshold</name>
	    <label>Mininum distance between tracks before dropping tracks.</label>
	    <min>3</min>
	    <max>1000</max>
	    <default>100</default>
	    <slider>true</slider>
	    <reloadable>true</reloadable>
	  </parameter>

	  <parameter type="integer">
	    <name>MaximumNumberOfTrackers</name>
	    <label>The maximum number of trackers allows to run at any
	    given time.</label>
	    <min>1</min>
	    <max>100</max>
	    <default>4</default>
	    <slider>true</slider>
	    <reloadable>true</reloadable>
	  </parameter>
	</configuration>
</swistrackcomponent>
