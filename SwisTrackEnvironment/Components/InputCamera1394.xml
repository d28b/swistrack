<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Input from Firewire (1394) Camera</friendlyname>
	<description>Grabs an image from a Firewire camera (CMU 1394 driver).</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/InputCamera1394</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="dropdownlist">
			<name>CameraNumber</name>
			<label>Camera Number</label>
			<items>
				<item key="0">0</item>
				<item key="1">1</item>
				<item key="2">2</item>
				<item key="2">3</item>
				<item key="2">4</item>
				<item key="2">5</item>
			</items>
			<default>0</default>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>VideoFormat</name>
			<label>Video format</label>
			<items>
				<item key="0">0</item>
				<item key="1">1</item>
				<item key="2">2</item>
			</items>
			<default>0</default>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>VideoMode</name>
			<label>Video mode</label>
			<items>
				<item key="0">0</item>
				<item key="1">1</item>
				<item key="2">2</item>
				<item key="3">3</item>
				<item key="4">4</item>
				<item key="5">5</item>
				<item key="6">6</item>
				<item key="7">7</item>
			</items>
			<default>5</default>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>FrameRate</name>
			<label>Frame Rate (fps)</label>
			<items>
				<item key="0">1.875</item>
				<item key="1">3.75</item>
				<item key="2">7.5</item>
				<item key="3">15</item>
				<item key="4">30</item>
				<item key="5">60</item>
				<item key="6">120</item>
				<item key="7">240</item>
			</items>
			<default>4</default>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="button">
			<name>ConfigurationWindow</name>
			<label>Configuration Window</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
