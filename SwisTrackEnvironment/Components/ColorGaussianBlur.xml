<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Gaussian Blur</friendlyname>
	<description>Blurs a color image using a gaussian window. This an expensive operation, but will reduce the noise.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/ColorGaussianBlur</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="double">
			<name>SigmaX</name>
			<label>Sigma X</label>
			<default>2</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="double">
			<name>SigmaY</name>
			<label>Sigma Y</label>
			<default>2</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>SizeX</name>
			<label>Size X</label>
			<default>5</default>
			<onchange>reload</onchange>
		</parameter>
		<parameter type="integer">
			<name>SizeY</name>
			<label>Size Y</label>
			<default>5</default>
			<onchange>reload</onchange>
		</parameter>
	</configuration>
</swistrackcomponent>
