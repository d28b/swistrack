<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Red-Green Marker Detection</friendlyname>
	<description>Detects markers consisting a red and a green blob each on a color image and stores their position and orientation as particles.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/BlobDetectionRedGreen</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>mMaxNumberOfParticles</name>
			<label>Max. particles</label>
			<min>1</min>
			<max>50</max>
			<default>10</default>
			<unit>blobs</unit>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>MaxDistance</name>
			<label>Max. distance</label>
			<min>0</min>
			<default>10</default>
			<max>100</max>
			<unit>pixels</unit>
			<slider>true</slider>
			<sliderstep>1</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<line />
		<title>Red Blob</title>
		<parameter type="integer">
			<name>Color1_Threshold</name>
			<label>Threshold</label>
			<min>0</min>
			<max>255</max>
			<default>50</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>Color1_SelectionByArea</name>
			<label>Selection by area</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>Color1_AreaMin</name>
			<label>Min. blob size</label>
			<min>0</min>
			<default>10</default>
			<unit>pixels</unit>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>Color1_AreaMax</name>
			<label>Max. blob size</label>
			<min>0</min>
			<default>100</default>
			<unit>pixels</unit>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>Color1_SelectionByCompactness</name>
			<label>Selection by compactness</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Color1_CompactnessMin</name>
			<label>Min. compactness</label>
			<min>0</min>
			<default>0</default>
			<max>1</max>
			<slider>true</slider>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Color1_CompactnessMax</name>
			<label>Max. compactness</label>
			<min>0</min>
			<default>1</default>
			<max>1</max>
			<slider>true</slider>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<line />
		<title>Green Blob</title>
		<parameter type="integer">
			<name>Color2_Threshold</name>
			<label>Threshold</label>
			<min>0</min>
			<max>255</max>
			<default>50</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>Color2_SelectionByArea</name>
			<label>Selection by area</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>Color2_AreaMin</name>
			<label>Min. blob size</label>
			<min>0</min>
			<default>10</default>
			<unit>pixels</unit>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>Color2_AreaMax</name>
			<label>Max. blob size</label>
			<min>0</min>
			<default>100</default>
			<unit>pixels</unit>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>Color2_SelectionByCompactness</name>
			<label>Selection by compactness</label>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Color2_CompactnessMin</name>
			<label>Min. compactness</label>
			<min>0</min>
			<default>0</default>
			<max>1</max>
			<slider>true</slider>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Color2_CompactnessMax</name>
			<label>Max. compactness</label>
			<min>0</min>
			<default>1</default>
			<max>1</max>
			<slider>true</slider>
			<sliderstep>0.01</sliderstep>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
