<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Trigger Counter</friendlyname>
	<description>Invokes a certain number of steps and then stops. You can combine this trigger with other triggers.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/TriggerCounter</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>Count</name>
			<label>Steps</label>
			<default>1</default>
			<min>1</min>
			<max>100</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<label>Click the "Start" button to execute the above number of steps. Note that you must be in "Run" mode.</label>
		<parameter type="button">
			<name>Start</name>
			<label>Start</label>
			<default>false</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
