#!/usr/bin/make -f



include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/makefile.mk

DEB_MAKE_CLEAN_TARGET    := clean
DEB_MAKE_BUILD_TARGET    := all PROJROOT="code" OUTPUTDIR=$(CURDIR)/debian/swistrack/usr/bin
DEB_MAKE_INSTALL_TARGET  := install PROJROOT="code" OUTPUTDIR=$(CURDIR)/debian/swistrack/usr/bin
DEB_MAKE_MAKEFILE        := code/Make/Makefile
#DEB_MAKE_ENVVARS    := 
# due to https://bugs.launchpad.net/ubuntu/+source/cdbs/+bug/138981
# include 'autoconfigured' values of CPPFLAGS and LDFLAGS by using the values
# generated by 'make -f code/Make/Makefile echo'
CPPFLAGS= -I/usr/include -I/usr/include/opencv -I/opt/local/include/opencv -I/opt/local/include -Icode/core -Icode/camshift_wrapper -Icode/libtsai -Icode/libtsai/tsaisrc -Icode/libtsai/mathsrc -Icode/libtsai/mathsrc/minpack -Icode/libtsai/include -Icode/gui -I/usr/local/include -I/usr/lib/wx/include/gtk2-unicode-release-2.8 -I/usr/include/wx-2.8 -D_FILE_OFFSET_BITS=64 -D_LARGE_FILES -D__WXGTK__ -pthread

LDFLAGS = -g -lm -lstdc++ -lcv -lcxcore -lhighgui -pthread -Wl,-Bsymbolic-functions -lwx_gtk2u_richtext-2.8 -lwx_gtk2u_aui-2.8 -lwx_gtk2u_xrc-2.8 -lwx_gtk2u_qa-2.8 -lwx_gtk2u_html-2.8 -lwx_gtk2u_adv-2.8 -lwx_gtk2u_core-2.8 -lwx_baseu_xml-2.8 -lwx_baseu_net-2.8 -lwx_baseu-2.8 -L/opt/local/lib
