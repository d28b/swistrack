<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Threshold a grayscale image</friendlyname>
	<description>Thresholds a grayscale image and stores the result in a binary image.</description>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="integer">
			<name>Threshold</name>
			<label>Threshold</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<display>Output</display>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
