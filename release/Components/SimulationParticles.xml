<?xml version="1.0"?>
<swistrackcomponent>
	<name>Particle Simulation</name>
	<description>Reads particles from a file. The file must contain NMEA 0183 records.</description>
	<display>Output</display>

	<configuration>
		<parameter type="file">
			<name>File</name>
			<label>Simulation file</label>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="pointDouble">
			<name>CameraOrigin</name>
			<label>Camera origin</label>
			<unit>m</unit>
			<default>
				<x>0</x>
				<y>0</y>
			</default>
			<display>Output</display>
		</parameter>
		<parameter type="angle">
			<name>CameraRotation</name>
			<label>Camera orientation</label>
			<min>0</min>
			<max>6.2831853</max>
			<default>0</default>
			<display>Output</display>
		</parameter>
		<parameter type="double">
			<name>CameraPixelSize</name>
			<label>Pixel size</label>
			<unit>m</unit>
			<default>1</default>
			<display>Output</display>
		</parameter>
		<parameter type="sizeDouble">
			<name>CameraSize</name>
			<label>Camera size</label>
			<unit>pixels</unit>
			<default>1</default>
			<display>Output</display>
		</parameter>
	</configuration>
</swistrackcomponent>
