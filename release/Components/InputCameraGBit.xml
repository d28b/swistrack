<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>GBit Camera</friendlyname>
	<description>Grabs an image from a GBit camera (Basler Pylon driver).</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/ComponentInputCameraGBit</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="dropdownlist">
			<name>DeviceNumber</name>
			<label>Camera</label>
			<items>
				<item key="0">Camera 1</item>
				<item key="1">Camera 2</item>
				<item key="2">Camera 3</item>
				<item key="3">Camera 4</item>
			</items>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Color</name>
			<label>Mode</label>
			<items>
				<item key="true">Color (YUV422)</item>
				<item key="false">Mono (8 bit)</item>
			</items>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>TriggerMode</name>
			<label>Trigger mode</label>
			<items>
				<item key="0">Timer</item>
				<item key="1">External trigger (line 1)</item>
				<item key="2">External trigger (line 2)</item>
				<item key="3">External trigger (line 3)</item>
				<item key="4">External trigger (line 4)</item>
				<item key="5">Software trigger</item>
			</items>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="integer">
			<name>TriggerTimer</name>
			<label>Timer</label>
			<unit>FPS</unit>
			<min>1</min>
			<max>50</max>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="integer">
			<name>ExposureTime</name>
			<label>Exposure time</label>
			<min>1</min>
			<max>1000</max>
			<slider>true</slider>
			<display>Output</display>
		</parameter>
	</configuration>
</swistrackcomponent>
