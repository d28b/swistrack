<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>GBit Camera</friendlyname>
	<description>Grabs an image from the GBit Camera (Basler Pylon Driver).</description>
	<display>Output</display>

	<configuration>
		<parameter type="dropdownlist">
			<name>Device</name>
			<label>Camera</label>
			<items>
				<item key="0">Camera 1</item>
				<item key="1">Camera 2</item>
				<item key="2">Camera 3</item>
				<item key="3">Camera 4</item>
			</items>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Mode</name>
			<label>Mode</label>
			<items>
				<item key="color">Color (YUV422)</item>
				<item key="mono">Mono (8 bit)</item>
			</items>
			<display>Output</display>
			<reloadable>false</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
