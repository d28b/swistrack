<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Output to AVI File</friendlyname>
	<description>Write an AVI file.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/ComponentList/OutputFileAvi</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="file">
			<name>File</name>
			<label>AVI File</label>
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="integer">
			<name>FrameRate</name>
			<label>Frame Rate</label>
			<default>15</default>		
			<reloadable>false</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>InputImage</name>
			<label>Input Image</label>
			<items>
				<item key="0">Gray</item>
				<item key="1">Color</item>
				<item key="2">Binary</item>
			</items>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>
